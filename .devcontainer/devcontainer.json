{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  // Container environment variables
  "containerEnv": {
    "PYTHONPATH": "/mount/src/streamlit-agents-sdk-example"
  },
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "src/ui/streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.analysis.extraPaths": [
          "/mount/src/streamlit-agents-sdk-example"
        ],
        "terminal.integrated.env.linux": {
          "PYTHONPATH": "/mount/src/streamlit-agents-sdk-example"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "python -m streamlit run src/ui/streamlit_app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ],
  "postCreateCommand": "pip install -e ."
}