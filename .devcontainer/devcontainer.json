{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "src/ui/streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.analysis.extraPaths": [
          "${workspaceFolder}/src"
        ],
        "terminal.integrated.env.linux": {
          "PYTHONPATH": "${workspaceFolder}/src"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "updateContentCommand": "pip install --no-cache-dir -r requirements.txt && pip install --no-cache-dir streamlit",

  "postAttachCommand": "export PYTHONPATH=${PWD}/src && python -m streamlit run src/ui/streamlit_app.py --server.enableCORS false --server.enableXsrfProtection false",

  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
